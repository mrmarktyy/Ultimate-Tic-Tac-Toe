extends ../layouts/default

block content
  .container
    h1 Upload ECPC
    p Upload a csv file containing 2 fields with headers uuid and ecpc to Ulimate.
    .row
      .col-sm-8
        .uploadfileform
          form(action='/import-ecpc/upload', method='post', enctype='multipart/form-data')
            .form-group
              label Zero any products not in ecpc upload
                input(type="checkbox", name="ecpcReset", value='reset' checked).form-control
            .formgroup
              label Input File
                input(type='file', name='ecpcUpload').form-control-file
            button(type="submit").btn.btn-large.btn-primary Upload File
